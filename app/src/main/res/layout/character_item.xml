<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Utilisation de CardView pour envelopper les éléments de liste -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:radius="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Image située à gauche et centrée verticalement -->
            <ImageView
                android:id="@+id/imageViewCharacter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:contentDescription="character_image_description"
                android:src="@drawable/ic_launcher_background" />

            <!-- Champ de texte au-dessus de l'image -->
            <TextView
                android:id="@+id/textViewCharacterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewCharacterDescription"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/imageViewCharacter"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nom du personnage"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="Character Name" />

            <!-- Champ de texte en dessous du champ de texte précédent -->
            <TextView
                android:id="@+id/textViewCharacterDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCharacterName"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/imageViewCharacter"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Description du personnage"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:text="Character Description" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>
